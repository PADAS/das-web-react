{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "react-app",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "indent": ["error", 2, {
      "ignoredNodes": ["TemplateLiteral"]
    }],
    "template-curly-spacing" : "off",
    "keyword-spacing": ["error", { "before": true, "after": true }],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "react/prop-types": [
      0
    ],
    "strict": "off",
    "max-len": "off",
    "no-prototype-builtins": "off",
    "no-underscore-dangle": "off",
    "camelcase": "off",
    "func-names": "off",
    "react/no-this-in-sfc": "off"
  },
  "globals": {
    "angular": true,
    "google": true,
    "moment": true,
    "L": true,
    "$": true,
    "flatpickr": true,
    "io": true
  },
  "root": true,
  "overrides": [
    {
      "files": [
        "**/*.spec.js"
      ],
      "rules": {
        "prefer-arrow-callback": "off",
        "one-var": "off",
        "one-var-declaration-per-line": "off"
      },
      "globals": {
        "describe": true,
        "beforeEach": true,
        "beforeAll": true,
        "afterEach": true,
        "afterAll": true,
        "it": true,
        "fit": true,
        "xit": true,
        "fdescribe": true,
        "xdescribe": true,
        "protractor": true,
        "browser": true,
        "$": true,
        "expect": true,
        "sinon": true,
        "inject": true,
        "jasmine": true
      }
    }
  ]
}